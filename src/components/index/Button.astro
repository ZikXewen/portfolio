---
export interface Props {
  title: string
  href: string
}

const { title, href } = Astro.props
---

<a
  class="relative h-16 w-full rounded-[5px] bg-gradient-to-r from-cyan-500 to-slate-500 text-center"
  href={href}
>
  <div
    class="absolute bottom-1 left-1 right-1 top-1 rounded-[4px] bg-slate-800 text-2xl leading-[56px] hover:bg-slate-700"
  >
    {title}
  </div>
</a>
