---
export interface Props {
  title: string
  href: string
}

const { title, href } = Astro.props
---

<a
  class="h-16 w-full relative bg-gradient-to-r from-cyan-500 to-slate-500 rounded-[5px] text-center"
  href={href}
>
  <div
    class="absolute top-1 right-1 left-1 bottom-1 bg-slate-800 rounded-[4px] leading-[56px] text-slate-300 text-2xl hover:bg-slate-700"
  >
    {title}
  </div>
</a>
