---
import Button from '../components/index/Button.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title="Home">
  <div class="relative mx-auto h-full max-w-3xl overflow-hidden">
    <h1
      class="title absolute top-1/2 left-1/2 overflow-hidden whitespace-nowrap font-mono text-8xl"
    >
    </h1>
    <img
      src="./portrait_256.webp"
      class="img absolute top-1/2 left-1/2 h-64 w-64 rounded-full"
    />
    <div
      class="buttons absolute bottom-4 flex w-full flex-row items-center justify-center gap-3 px-4"
    >
      <Button title="Console" href="console" />
      <Button title="Resume" href="resume" />
    </div>
  </div>
</Layout>
<style>
  @keyframes centerToTop {
    to {
      top: 20px;
      transform: translate(-50%, 0);
    }
  }
  @keyframes typing {
    from {
      width: 0;
    }
  }
  .title {
    --content-length: 4;
    --content: 'Data';
    animation: typing 1.5s steps(var(--content-length)),
      centerToTop 0.5s ease-in-out 2s forwards;
    transform: translate(-50%, -50%);
    width: calc(var(--content-length) * 48px);
    /* using 1ch caused some issues */
  }
  .title::after {
    content: var(--content);
  }
  @media screen and (min-width: 768px) {
    .title {
      --content: 'Call Me Data';
      --content-length: 12;
    }
  }
  @keyframes fromBottom {
    to {
      transform: translateY(0);
    }
  }
  .buttons {
    transform: translateY(200%);
    animation: fromBottom 0.5s ease-in-out 2.5s forwards;
  }
  @keyframes zoomIn {
    to {
      transform: translate(-50%, -50%) scale(1);
    }
  }
  .img {
    transform: translate(-50%, -50%) scale(0);
    animation: zoomIn 0.5s ease-in-out 2.5s forwards;
  }
</style>
